pipeline {
    agent any
                   environment {
                       AWS_ACCESS_KEY_ID = credentials('AWS')
                       AWS_SECRET_ACCESS_KEY = credentials('AWS')
                    }
        stages {
            stage ('Network') {
                when {
                    expression {
                        Network == 'True'
                    }
                }
                steps {
                     dir ('env/management/network') {
                    sh 'export AWS_ACCESS_KEY="$AWS_ACCESS_KEY_ID"'
                    sh 'export AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"'
                    sh ' export AWS_REGION=ap-south-1'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform plan'
                        }
                }
            }
        stage ('Openvpn') {
            when {
                expression {
                    Openvpn == 'True'
                }
            }
            steps {
                dir('env/management/openvpn') {
                    sh 'export AWS_ACCESS_KEY="$AWS_ACCESS_KEY_ID"'
                    sh 'export AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"'
                    sh ' export AWS_REGION=ap-south-1'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform plan'
                }
            }
        }
        stage ('internal_alb') {
            when {
                expression {
                    ALB == 'True'
                }
            }
            steps {
                dir('env/management/internal_alb') {
                    sh 'export AWS_ACCESS_KEY="$AWS_ACCESS_KEY_ID"'
                    sh 'export AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"'
                    sh ' export AWS_REGION=ap-south-1'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform plan'
                }
            }
        }
        stage ('Buildpiper') {
           when {
                expression {
                    BP == 'True'
                }
            }
            steps {
                dir('env/management/buildpiper') {
                    sh 'export AWS_ACCESS_KEY="$AWS_ACCESS_KEY_ID"'
                    sh 'export AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"'
                    sh ' export AWS_REGION=ap-south-1'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform plan'
                }
            }
}
       stage ('EKS') {
           when {
                expression {
                    BP == 'True'
                }
            }
            steps {
                dir('env/management/EKS') {
                    sh 'export AWS_ACCESS_KEY="$AWS_ACCESS_KEY_ID"'
                    sh 'export AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY"'
                    sh ' export AWS_REGION=ap-south-1'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform plan'
                }
            }
}
}
}